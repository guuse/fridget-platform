{% import "utils/utils.html.twig" as utils %}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Fridget{% endblock %}</title>
    {{ encore_entry_link_tags('app') }}
</head>
<body>
    {{ encore_entry_script_tags('app') }}
    {{ encore_entry_script_tags('vue') }}
    </body>
</html>


{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }

        .product {
            background-color: rgba(0, 0, 0, .1);
            padding: 5px;
            margin: 10px;
        }

        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td, th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
        }

        .expired ,
        .expired tr{
            background-color: rgba(255,0,0,.5);
        }

    </style>

    <div class="example-wrapper">
        <h1>Old non-vue testview ðŸ¤®</h1>
        {% for box in user.box %}
            {% set num = 1 %}
            <h2>{{ box.name }}:</h2>
            {% for product in box.products %}
                <div class="product {{ utils.is_expired(product.ExpiresIn) }}">
                    <h4>{{ product.name }}: </h4>
                    <p>{{ product.description }}</p>
                    <table>
                        <tr>
                            <th>Houdbaarheid</th>
                            <th>Hoeveelheid</th>
                            <th>Eenheid</th>
                        </tr>
                        <tr>
                            <td>{{ product.ExpiresIn }} dagen</td>
                            <td>{{ product.amount }}</td>
                            <td>{{ product.unit }}</td>
                        </tr>
                    </table>
                    <form action="/api/remove/product/{{ product.id }}" method="post">
                        <input type="hidden" name="_method" value="DELETE" />
                        <input type="submit" value="Delete"/>
                    </form>
                    {% set num = num + 1 %}
                </div>
            {% endfor %}
        {% endfor %}
    </div>
    {{ encore_entry_script_tags('app') }}
    {{ encore_entry_script_tags('vue') }}
{% endblock %}
